using namespace std;
#include <iostream>
#include <vector>
 
int main()
{
    int n, k, max = 0, min = 101, max1 = 0, s = 0, l = 0, p;
    cin >> n >> k;
    int min1 = k;
    vector <int> a(n);
    vector <int> b(100);
    for (int i = 0; i < n; ++i) {
      cin >> a[i];
      ++b[a[i]];
      if (max < a[i]) 
        max = a[i];
      if (min > a[i]) 
        min = a[i];
    }
    for (int i = min; i <= max; ++i) {
      if (max1 < b[i])
        max1 = b[i];
      if (b[i] != 0) 
        ++l;
    }
    for (int i = min; i <= max; ++i) {
      if (b[i] != 0 && max1 > b[i])
        s += max1 - b[i];
    }
    if (l % 3 != 0) {
      p = k - l % 3;
      cout << s + (p * 3) + 2;
    }
    else
      cout << s;
    return 0;
}
